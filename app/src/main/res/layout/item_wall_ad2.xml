<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/ad_attribution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFCC66"
            android:text="@string/ad"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/ad_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:adjustViewBounds="true"
            android:background="@drawable/background_shimmer_oval"
            android:contentDescription="@string/ad_icon"
            app:layout_constraintStart_toStartOf="@+id/ad_attribution"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/ad_headline"
            android:layout_width="150dp"
            android:layout_height="16dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_shimmer"
            android:textColor="@color/textPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ad_icon"
            app:layout_constraintTop_toTopOf="@+id/ad_icon" />

        <TextView
            android:id="@+id/ad_advertiser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="bottom"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/ad_headline"
            app:layout_constraintTop_toBottomOf="@+id/ad_headline" />

        <RatingBar
            android:id="@+id/ad_stars"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5"
            app:layout_constraintBottom_toBottomOf="@+id/ad_advertiser"
            app:layout_constraintStart_toEndOf="@+id/ad_advertiser"
            app:layout_constraintTop_toTopOf="@+id/ad_advertiser" />

        <View
            android:id="@+id/ad_body"
            android:layout_width="0dp"
            android:layout_height="14dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/background_shimmer"
            android:textColor="@color/textSecondary"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/ad_icon"
            app:layout_constraintTop_toBottomOf="@+id/ad_icon" />

        <View
            android:id="@+id/ad_media"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_shimmer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/ad_body"
            app:layout_constraintTop_toBottomOf="@+id/ad_body" />

        <View
            android:id="@+id/ad_call_to_action"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/btn_primary"
            android:minWidth="100dp"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/ad_media"
            app:layout_constraintTop_toBottomOf="@+id/ad_media" />

        <View
            android:id="@+id/ad_store"
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/background_shimmer"
            app:layout_constraintBottom_toBottomOf="@+id/ad_call_to_action"
            app:layout_constraintEnd_toStartOf="@+id/ad_call_to_action"
            app:layout_constraintTop_toTopOf="@+id/ad_call_to_action" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>